@model Anagrafiche
@{
    ViewData["Title"] = "Modifica Anagrafica";
}

<div class="container mt-4">
    <h2><i class="fas fa-user-edit me-2"></i>Modifica Anagrafica</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdAnagrafica" />

        <div class="alert alert-info mb-4">
            <strong>Nota:</strong> Assicurati che tutte le informazioni siano corrette prima di salvare.
        </div>

        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-address-card me-2"></i>Dettagli Anagrafica</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cognome" class="control-label">Cognome</label>
                            <input asp-for="Cognome" class="form-control" placeholder="Inserisci cognome" />
                            <span asp-validation-for="Cognome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label">Nome</label>
                            <input asp-for="Nome" class="form-control" placeholder="Inserisci nome" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Indirizzo" class="control-label">Indirizzo</label>
                    <input asp-for="Indirizzo" class="form-control" placeholder="Inserisci indirizzo" />
                    <span asp-validation-for="Indirizzo" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Citta" class="control-label">Città</label>
                            <input asp-for="Citta" class="form-control" placeholder="Inserisci città" />
                            <span asp-validation-for="Citta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cap" class="control-label">CAP</label>
                            <input asp-for="Cap" class="form-control" placeholder="Inserisci CAP" />
                            <span asp-validation-for="Cap" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CodiceFiscale" class="control-label">Codice Fiscale</label>
                    <input asp-for="CodiceFiscale" class="form-control" placeholder="Inserisci codice fiscale" />
                    <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salva
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
