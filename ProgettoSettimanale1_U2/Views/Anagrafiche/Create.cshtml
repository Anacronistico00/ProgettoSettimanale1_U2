@model AddAnagraficheViewModel
@{
    ViewData["Title"] = "Inserisci Nuova Anagrafica";
}

<div class="container mt-4">
    <h2><i class="fas fa-user-plus me-2"></i>Inserisci Nuova Anagrafica</h2>

    <form asp-action="Create" method="post">
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Dettagli Anagrafica</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cognome" class="control-label">Cognome</label>
                            <input asp-for="Cognome" class="form-control" placeholder="Es. Rossi" />
                            <span asp-validation-for="Cognome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label">Nome</label>
                            <input asp-for="Nome" class="form-control" placeholder="Es. Mario" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Indirizzo" class="control-label">Indirizzo</label>
                    <input asp-for="Indirizzo" class="form-control" placeholder="Es. Via Roma, 123" />
                    <span asp-validation-for="Indirizzo" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Citta" class="control-label">Città</label>
                            <input asp-for="Citta" class="form-control" placeholder="Es. Milano" />
                            <span asp-validation-for="Citta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Cap" class="control-label">CAP</label>
                            <input asp-for="Cap" class="form-control" placeholder="Es. 20100" />
                            <span asp-validation-for="Cap" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CodiceFiscale" class="control-label">Codice Fiscale</label>
                    <input asp-for="CodiceFiscale" class="form-control" placeholder="Es. RSSMRA80A01H501Z" />
                    <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salva
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
