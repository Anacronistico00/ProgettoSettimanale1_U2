@model List<VerbaliPerTrasgressoreViewModel>
@{
    ViewData["Title"] = "Verbali per Trasgressore";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Verbali per Trasgressore</h2>

    <a asp-action="Index" class="btn btn-outline-primary mb-3">
        <i class="fas fa-arrow-left me-2"></i>Torna ai Report
    </a>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Codice Fiscale</th>
                    <th>Numero Verbali</th>
                    <th>Importo Totale (€)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cognome</td>
                        <td>@item.Nome</td>
                        <td>@item.CodiceFiscale</td>
                        <td>@item.NumeroVerbali</td>
                        <td>@item.ImportoTotale.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
