@model List<ViolazioniGraviViewModel>
@{
    ViewData["Title"] = "Violazioni superiori a 10 punti";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Violazioni oltre 10 punti</h2>

    <a asp-action="Index" class="btn btn-outline-primary mb-3">
        <i class="fas fa-arrow-left me-2"></i>Torna ai Report
    </a>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Data Violazione</th>
                    <th>Punti Totali Decurtati</th>
                    <th>Importo Sanzione (€)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cognome</td>
                        <td>@item.Nome</td>
                        <td>@item.DataViolazione.ToString("dd/MM/yyyy")</td>
                        <td>@item.DecurtamentoPunti</td>
                        <td>@item.Importo.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
