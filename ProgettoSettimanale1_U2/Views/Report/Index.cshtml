@{
    ViewData["Title"] = "Report";
}

<div class="container mt-4">
    <h2><i class="fas fa-chart-line me-2"></i>Report</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Report Trasgressori</h5>
                </div>
                <div class="card-body">
                    <p>Visualizza il numero totale di verbali e l'importo complessivo per ogni trasgressore.</p>
                    <a asp-action="VerbaliPerTrasgressore" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Visualizza Report
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Punti Decurtati per Trasgressore</h5>
                </div>
                <div class="card-body">
                    <p>Visualizza il totale dei punti decurtati per ogni trasgressore.</p>
                    <a asp-action="PuntiPerTrasgressore" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Visualizza Report
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Violazioni con Decurtamento > 10 Punti</h5>
                </div>
                <div class="card-body">
                    <p>Visualizza i dettagli delle violazioni con decurtamento punti superiore a 10.</p>
                    <a asp-action="ViolazioniOltre10Punti" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Visualizza Report
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Violazioni con Importo > 400€</h5>
                </div>
                <div class="card-body">
                    <p>Visualizza i dettagli delle violazioni con importo superiore a 400€.</p>
                    <a asp-action="ViolazioniOltre400Euro" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Visualizza Report
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
