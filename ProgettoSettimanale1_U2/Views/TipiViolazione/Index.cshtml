@model List<TipiViolazione>

@{
    ViewData["Title"] = "Elenco Tipi Violazione";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-exclamation-triangle me-2"></i>Elenco Tipi Violazione</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Inserisci Nuovo Tipo di Violazione
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Tipi di Violazione Registrati</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th scope="col"><i class="fas fa-exclamation-triangle me-1"></i>Descrizione</th>
                            <th scope="col"><i class="fas fa-cogs me-1"></i>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Descrizione</td>
                                    <td>
                                        <div class="btn-group d-flex justify-content-center" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.IdViolazione" class="btn btn-sm btn-warning mx-2" title="Modifica">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdViolazione" class="btn btn-sm btn-danger" title="Elimina">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Nessun tipo di violazione trovato nel sistema.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">Totale tipi di violazione: @(Model?.Count ?? 0)</span>
                </div>
            </div>
        </div>
    </div>
</div>
