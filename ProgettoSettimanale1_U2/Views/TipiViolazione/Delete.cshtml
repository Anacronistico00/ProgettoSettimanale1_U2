@model TipiViolazione

@{
    ViewData["Title"] = "Elimina Tipo Violazione";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash-alt me-2"></i>Conferma Eliminazione</h2>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Sei sicuro di voler eliminare questo tipo di violazione?</h4>
        <p class="mb-0">Questa azione è irreversibile e non potrà essere annullata.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Dettagli Tipo Violazione</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descrizione</dt>
                <dd class="col-sm-9 fw-bold">@Model.Descrizione</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdViolazione" />
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-2"></i>Elimina
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
