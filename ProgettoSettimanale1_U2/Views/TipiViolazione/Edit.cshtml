@model TipiViolazione
@{
    ViewData["Title"] = "Modifica Tipo Violazione";
}

<div class="container mt-4">
    <h2><i class="fas fa-edit me-2"></i>Modifica Tipo di Violazione</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdViolazione" />

        <div class="card shadow-lg mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Dettagli Tipo Violazione</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Descrizione" class="control-label">Descrizione</label>
                    <textarea asp-for="Descrizione" class="form-control" rows="4" placeholder="Descrizione del tipo di violazione..."></textarea>
                    <span asp-validation-for="Descrizione" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salva
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
