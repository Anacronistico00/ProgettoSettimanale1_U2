@model TipiViolazione

@{
    ViewData["Title"] = "Inserisci Tipo Violazione";
}

<div class="container mt-4">
    <h2><i class="fas fa-plus-circle me-2"></i>Inserisci Nuovo Tipo di Violazione</h2>

    <form asp-action="Create" method="post">
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Dettagli Tipo Violazione</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Descrizione" class="control-label">Descrizione</label>
                    <textarea asp-for="Descrizione" class="form-control" rows="4" placeholder="Inserisci la descrizione del tipo di violazione..."></textarea>
                    <span asp-validation-for="Descrizione" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salva
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
