@model VerbaliViewModel
@{
    ViewData["Title"] = "Modifica Verbale";
    var anagrafiche = ViewBag.Anagrafiche as List<Anagrafiche>;
    var tipiViolazione = ViewBag.TipiViolazione as List<TipiViolazione>;
}

<div class="container mt-4">
    <h2><i class="fas fa-edit me-2"></i>Modifica Verbale</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdVerbale" />

        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Dettagli Verbale</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdAnagrafica" class="control-label">Trasgressore</label>
                            <select asp-for="IdAnagrafica" class="form-control" disabled>
                                @foreach (var a in anagrafiche)
                                {
                                    <option value="@a.IdAnagrafica" selected="@(a.IdAnagrafica == Model.IdAnagrafica)">@a.Cognome @a.Nome</option>
                                }
                            </select>
                            <input type="hidden" asp-for="IdAnagrafica" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IdViolazione" class="control-label">Tipo Violazione</label>
                            <select asp-for="IdViolazione" class="form-control" disabled>
                                @foreach (var v in tipiViolazione)
                                {
                                    <option value="@v.IdViolazione" selected="@(v.IdViolazione == Model.IdViolazione)">@v.Descrizione</option>
                                }
                            </select>
                            <input type="hidden" asp-for="IdViolazione" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DataViolazione" class="control-label">Data Violazione</label>
                            <input asp-for="DataViolazione" type="date" class="form-control" />
                            <span asp-validation-for="DataViolazione" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IndirizzoViolazione" class="control-label">Indirizzo Violazione</label>
                            <input asp-for="IndirizzoViolazione" class="form-control" />
                            <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NominativoAgente" class="control-label">Nominativo Agente</label>
                            <input asp-for="NominativoAgente" class="form-control" />
                            <span asp-validation-for="NominativoAgente" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Importo" class="control-label">Importo (€)</label>
                            <input asp-for="Importo" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Importo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DecurtamentoPunti" class="control-label">Decurtamento Punti</label>
                    <input asp-for="DecurtamentoPunti" type="number" class="form-control" />
                    <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salva
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
