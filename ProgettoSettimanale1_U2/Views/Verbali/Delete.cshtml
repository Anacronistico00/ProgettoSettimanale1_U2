@model VerbaliViewModel
@{
    ViewData["Title"] = "Elimina Verbale";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash me-2"></i>Conferma Eliminazione</h2>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Sei sicuro di voler eliminare questo verbale?</h4>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Dettagli Verbale</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Verbale N°</dt>
                <dd class="col-sm-9 fw-bold">@Model.IdVerbale</dd>

                <dt class="col-sm-3">Trasgressore</dt>
                <dd class="col-sm-9">@Model.NomeCompleto</dd>

                <dt class="col-sm-3">Tipo Violazione</dt>
                <dd class="col-sm-9">@Model.DescrizioneViolazione</dd>

                <dt class="col-sm-3">Data Violazione</dt>
                <dd class="col-sm-9">@Model.DataViolazione.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Importo</dt>
                <dd class="col-sm-9">€ @Model.Importo.ToString("N2")</dd>

                <dt class="col-sm-3">Decurtamento Punti</dt>
                <dd class="col-sm-9">@(Model.DecurtamentoPunti.HasValue ? Model.DecurtamentoPunti.Value.ToString() : "-")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdVerbale" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Elimina
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Annulla
            </a>
        </div>
    </form>
</div>
